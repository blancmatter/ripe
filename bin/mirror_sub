#!/usr/bin/perl

# Script for creating an IRAF script for RINGO sky polarisation mirror open / close reduction
# ARGV[0] = file with mirror open
# ARGV[1] = file with mirror closed


open FILE, ">>sky_script.cl";


for ($n=1; $n<9; $n++) {
print FILE "imarith $ARGV[0]_0_$n","_1.fits - $ARGV[1]_0_$n","_1.fits $ARGV[0]_S_$n","_1.fits\n";
}

